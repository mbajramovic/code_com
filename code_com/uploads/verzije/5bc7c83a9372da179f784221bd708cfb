#include <stdio.h>
int main() {
    int i, j, n;
    
    printf ("Unesite broj n: ");
    scanf ("%d",&n);
    if (n%2==0 || n<3 || n>100) 
        printf ("Broj je van trazenog opsega.");
    
    else {
        for (i=1; i<=n/2; i++) {
            for (j=1; j<=n; j++) {
                if (i+j==n/2+2 || j==i+n/2)
                printf ("+");
                else printf (" ");
            }
            printf ("\n");
        }
        
        for (i=n/2+1; i<=n+n/2; i++) {
            for (j=1; j<=n; j++) {
                if (i==n/2+1  || i==n+n/2 || j==1 || j==n || i==j+n/2 || i+j==n+n/2+1)
                printf ("+");
                else printf (" ");
            }
            printf ("\n");
        }
        
    }
    return 0;
}
   


